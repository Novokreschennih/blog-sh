---js
const pagination = {
	data: "collections",
	size: 1,
	alias: "tag",
	filter: ["all", "nav", "post", "posts"],
};

const eleventyExcludeFromCollections = true;

const eleventyComputed = {
	title: `Статьи по тегу “{{ tag }}”`,
	layout: "layouts/base.njk", // <-- УКАЗЫВАЕМ НАШ ГЛАВНЫЙ ШАБЛОН
	permalink: function(data) {
		return `/tags/${this.slugify(data.tag)}/`;
	}
};
---
<h1>{{ title }}</h1>

{% set postslist = collections[tag] | reverse %}
{% include "postslist.njk" %}

<p style="margin-top: 2em; text-align: center;"><a href="{{ '/tags/' | url }}">Посмотреть все теги</a></p>
